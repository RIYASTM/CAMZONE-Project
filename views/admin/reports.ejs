<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reports | CAMZONE</title>
    <link rel="stylesheet" href="/stylesheet/admin/reports.css">
    <link rel="stylesheet" href="/stylesheet/partials/admins/sidebar.css">
    <link rel="stylesheet" href="/stylesheet/partials/admins/header.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <!-- Include Sidebar -->
        <%- include('../partials/admins/sidebar') %>
        
        <!-- Main Content -->
        <div class="main-content">
            <!-- Include Header -->
            <%- include('../partials/admins/header') %>
            
            <!-- Welcome Section -->
            <div class="welcome-section">
                <h1>Sales Reports</h1>
                <input type="hidden" id="salesReportData" value='<%= JSON.stringify(orders).replace(/'/g, '&#39;') %>'>
                <input type="hidden" id="usersData" value='<%= JSON.stringify(users).replace(/'/g, '&#39;') %>'>
                <input type="hidden" id="categoryData" value="<%=JSON.stringify(categories)%>">
                <input type="hidden" id="brandData" value="<%=JSON.stringify(brands)%>">
            </div>
            
            <!-- Report Filters -->
            <div class="report-filters">
                <div class="filter-group">
                    <label for="reportType">Report Type:</label>
                    <select id="reportType" class="filter-select">
                        <option value="all" selected>All Time</option>
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                        <option value="monthly">Monthly</option>
                        <option value="yearly">Yearly</option>
                        <option value="custom">Custom Range</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="startDate">Start Date:</label>
                    <input type="date" id="startDate" class="filter-input" disabled>
                </div>
                <div class="filter-group">
                    <label for="endDate">End Date:</label>
                    <input type="date" id="endDate" class="filter-input" disabled>
                </div>
                <div class="filter-group">
                    <button class="generate-report-btn" onclick="generateReport()">
                        <i class="fas fa-chart-line"></i> Generate Report
                    </button>
                </div>
                <div class="filter-group">
                    <button class="export-btn" onclick="exportReport()">
                        <i class="fas fa-download"></i> Export
                    </button>
                </div>
            </div>

            <!-- Sales Summary Cards -->
            <div class="sales-summary">
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="card-content">
                        <h3>Total Orders</h3>
                        <span class="metric-value" id="totalOrders">0</span>
                    </div>
                </div>
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-rupee-sign"></i>
                    </div>
                    <div class="card-content">
                        <h3>Total Revenue</h3> 
                        <span class="metric-value" id="totalRevenue">₹0</span>
                    </div>
                </div>
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="card-content">
                        <h3>Average Order Value</h3>
                        <span class="metric-value" id="avgOrderValue">₹0</span>
                    </div>
                </div>
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-percentage"></i>
                    </div>
                    <div class="card-content">
                        <h3>Growth Rate</h3>
                        <span class="metric-value" id="growthRate">0%</span>
                    </div>
                </div>
            </div>

            <!-- Top Products Section -->
            <div class="report-section">
                <div class="section-header">
                    <div class="section-title">
                        <span>Top Selling Products</span>
                        <div class="dropdown" id="productsFilter">
                            <span data-filter="all">All time</span>
                            <i class="fas fa-chevron-down"></i>
                            <div class="dropdown-menu" style="display: none;">
                                <div class="dropdown-item" data-filter="week">This week</div>
                                <div class="dropdown-item" data-filter="month">This month</div>
                                <div class="dropdown-item" data-filter="all">All time</div>
                            </div>
                        </div>
                    </div>
                    <div class="section-actions">
                        <button class="action-btn" onclick="exportProductsReport()">
                            <i class="fas fa-download"></i> Export
                        </button>
                    </div>
                </div>
                <div class="table-container">
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Product Name</th>
                                <th>Units Sold</th>
                                <th>Revenue</th>
                                <th>Growth</th>
                            </tr>
                        </thead>
                        <tbody id="topProductsTable">
                            <!-- Dynamic content will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Top Category Section -->
            <div class="report-section">
                <div class="section-header">
                    <div class="section-title">
                        <span>Top Selling Categories</span>
                        <div class="dropdown" id="categoryFilter">
                            <span data-filter="all">All time</span>
                            <i class="fas fa-chevron-down"></i>
                            <div class="dropdown-menu" style="display: none;">
                                <div class="dropdown-item" data-filter="week">This week</div>
                                <div class="dropdown-item" data-filter="month">This month</div>
                                <div class="dropdown-item" data-filter="all">All time</div>
                            </div>
                        </div>
                    </div>
                    <div class="section-actions">
                        <button class="action-btn" onclick="exportCategoryReport()">
                            <i class="fas fa-download"></i> Export
                        </button>
                    </div>
                </div>
                <div class="table-container">
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Category Name</th>
                                <th>Units Sold</th>
                                <th>Revenue</th>
                                <th>Growth</th>
                            </tr>
                        </thead>
                        <tbody id="topCategoriesTable">
                            <!-- Dynamic content will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Top Brands Section -->
            <div class="report-section">
                <div class="section-header">
                    <div class="section-title">
                        <span>Top Selling Brands</span>
                        <div class="dropdown" id="brandFilter">
                            <span data-filter="all">All time</span>
                            <i class="fas fa-chevron-down"></i>
                            <div class="dropdown-menu" style="display: none;">
                                <div class="dropdown-item" data-filter="week">This week</div>
                                <div class="dropdown-item" data-filter="month">This month</div>
                                <div class="dropdown-item" data-filter="all">All time</div>
                            </div>
                        </div>
                    </div>
                    <div class="section-actions">
                        <button class="action-btn" onclick="exportBrandReport()">
                            <i class="fas fa-download"></i> Export
                        </button>
                    </div>
                </div>
                <div class="table-container">
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Category Name</th>
                                <th>Units Sold</th>
                                <th>Revenue</th>
                                <th>Growth</th>
                            </tr>
                        </thead>
                        <tbody id="topBrandsTable">
                            <!-- Dynamic content will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="report-section">
                <div class="section-header">
                    <div class="section-title">
                        <span>Recent Orders</span>
                        <div class="dropdown" id="ordersFilter">
                            <span data-filter="all">All time</span>
                            <i class="fas fa-chevron-down"></i>
                            <div class="dropdown-menu" style="display: none;">
                                <div class="dropdown-item" data-filter="week">This week</div>
                                <div class="dropdown-item" data-filter="month">This month</div>
                                <div class="dropdown-item" data-filter="all">All time</div>
                            </div>
                        </div>
                    </div>
                    <div class="section-actions">
                        <button class="action-btn" onclick="exportOrdersReport()">
                            <i class="fas fa-download"></i> Export
                        </button>
                    </div>
                </div>
                <div class="table-container">
                    <table class="report-table">
                        <thead>
                            <tr>
                                <th>Order Date</th>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Item</th>
                                <th>Order Total</th>
                                <th>Payment Method</th>
                                <th>Order Status</th>
                            </tr>
                        </thead>
                        <tbody id="recentOrdersTable">
                            <!-- Dynamic content will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Payment Methods Section -->
            <div class="report-section">
                <div class="section-header">
                    <div class="section-title">
                        <span>Payment Methods Distribution</span>
                    </div>
                    <div class="section-actions">
                        <button class="action-btn" onclick="exportPaymentReport()">
                            <i class="fas fa-download"></i> Export
                        </button>
                    </div>
                </div>
                <div class="payment-stats">
                    <div class="payment-method-card">
                        <h4>Cash on Delivery</h4>
                        <div class="payment-progress">
                            <div class="progress-bar cod-progress" style="width: 0%"></div>
                        </div>
                        <span class="payment-percentage" id="codPercentage">0%</span>
                        <span class="payment-count" id="codCount">(0 orders)</span>
                    </div>
                    <div class="payment-method-card">
                        <h4>Online Payment</h4>
                        <div class="payment-progress">
                            <div class="progress-bar online-progress" style="width: 0%"></div>
                        </div>
                        <span class="payment-percentage" id="onlinePercentage">0%</span>
                        <span class="payment-count" id="onlineCount">(0 orders)</span>
                    </div>
                    <div class="payment-method-card">
                        <h4>Wallet</h4>
                        <div class="payment-progress">
                            <div class="progress-bar wallet-progress" style="width: 0%"></div>
                        </div>
                        <span class="payment-percentage" id="walletPercentage">0%</span>
                        <span class="payment-count" id="walletCount">(0 orders)</span>
                    </div>
                </div>
            </div>

            <!-- Customer Insights -->
            <div class="report-section">
                <div class="section-header">
                    <div class="section-title">
                        <span>Customer Analytics</span>
                    </div>
                    <div class="section-actions">
                        <button class="action-btn" onclick="exportCustomerReport()">
                            <i class="fas fa-download"></i> Export
                        </button>
                    </div>
                </div>
                <div class="insights-grid">
                    <div class="insight-card">
                        <h4>New Customers</h4>
                        <span class="insight-value" id="newCustomers">0</span>
                        <span class="insight-desc">Last 30 days</span>
                    </div>
                    <div class="insight-card">
                        <h4>Returning Customers</h4>
                        <span class="insight-value" id="returningCustomers">0</span>
                        <span class="insight-desc">Multiple orders</span>
                    </div>
                    <div class="insight-card">
                        <h4>Customer Retention</h4>
                        <span class="insight-value" id="customerRetention">0%</span>
                        <span class="insight-desc">Return rate</span>
                    </div>
                    <div class="insight-card">
                        <h4>Average Customer Value</h4>
                        <span class="insight-value" id="avgCustomerValue">₹0</span>
                        <span class="insight-desc">Per customer</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.31/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.7.32/sweetalert2.all.min.js"></script>

    <script src="/javascript/admins/reports.js"></script>

</body>
</html>