<!DOCTYPE html>
<html lang="en"> 
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard | CAMZONE</title>
    <link rel="stylesheet" href="/stylesheet/admin/dashboard.css">
    <link rel="stylesheet" href="/stylesheet/partials/admins/sidebar.css">
    <link rel="stylesheet" href="/stylesheet/partials/admins/header.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container"> 
        <!-- Include Sidebar -->
        <%- include('../partials/admins/sidebar') %>
        
        <!-- Main Content -->
        <div class="main-content">
            <!-- Include Header -->
            <%- include('../partials/admins/header') %>
            
            <!-- Welcome Section -->
            <div class="welcome-section">
                <h1>Welcome Admin...</h1>
                <input type="hidden" id="salesReportData" value='<%= JSON.stringify(orders).replace(/'/g, '&#39;') %>'>
                <input type="hidden" id="usersData" value='<%= JSON.stringify(users).replace(/'/g, '&#39;') %>'>
            </div>
            
            <!-- Report Filters -->
            <div class="report-filters">
                <div class="filter-group">
                    <label for="reportType">Report Type:</label>
                    <select id="reportType" class="filter-select">
                        <option value="all" selected>All Time</option>
                        <option value="daily">Daily</option>
                        <option value="weekly" >Weekly</option>
                        <option value="monthly">Monthly</option>
                        <option value="yearly">Yearly</option>
                        <option value="custom">Custom Range</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="startDate">Start Date:</label>
                    <input type="date" id="startDate" class="filter-input" disabled>
                </div>
                <div class="filter-group">
                    <label for="endDate">End Date:</label>
                    <input type="date" id="endDate" class="filter-input" disabled>
                </div>
                <div class="filter-group">
                    <button class="generate-report-btn" onclick="generateReport()">
                        <i class="fas fa-chart-line"></i> Generate Report
                    </button>
                </div>
            </div>

            <!-- Sales Summary Cards -->
            <div class="sales-summary">
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="card-content">
                        <h3>Total Orders</h3>
                        <span class="metric-value" id="totalOrders">0</span>
                    </div>
                </div>
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-rupee-sign"></i>
                    </div>
                    <div class="card-content">
                        <h3>Total Revenue</h3> 
                        <span class="metric-value" id="totalRevenue">₹0</span>
                    </div>
                </div>
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="card-content">
                        <h3>Average Order Value</h3>
                        <span class="metric-value" id="avgOrderValue">₹0</span>
                    </div>
                </div>
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-percentage"></i>
                    </div>
                    <div class="card-content">
                        <h3>Growth Rate</h3>
                        <span class="metric-value" id="growthRate">0%</span>
                    </div>
                </div>
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="card-content">
                        <h3>Active Users</h3>
                        <span class="metric-value" id="activeUsers">0</span>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="charts-section">
                <div class="chart-container">
                    <div class="chart-header">
                        <div class="chart-title">
                            <span>Sales Trend</span>
                            <div class="dropdown" id="salesTrendFilter">
                                <span data-filter="week">This week</span>
                                <i class="fas fa-chevron-down"></i>
                                <div class="dropdown-menu" style="display: none;">
                                    <div class="dropdown-item" data-filter="week">This week</div>
                                    <div class="dropdown-item" data-filter="month">This month</div>
                                    <div class="dropdown-item" data-filter="all">All time</div>
                                </div>
                            </div>
                        </div>
                        <div class="chart-actions">
                            <i class="fas fa-ellipsis-h"></i>
                        </div>
                    </div>
                    <div class="chart">
                        <div class="chart-y-labels">
                            <span>360K</span>
                            <span>270K</span>
                            <span>180K</span>
                            <span>90K</span>
                            <span>0</span>
                        </div>
                        <canvas id="salesTrendChart" ></canvas>
                    </div>
                </div>
                <div class="chart-container">
                    <div class="chart-header">
                        <div class="chart-title">
                            <span>Order Status Distribution</span>
                            <div class="dropdown" id="orderStatusFilter">
                                <span data-filter="week">This week</span>
                                <i class="fas fa-chevron-down"></i>
                                <div class="dropdown-menu" style="display: none;">
                                    <div class="dropdown-item" data-filter="week">This week</div>
                                    <div class="dropdown-item" data-filter="month">This month</div>
                                    <div class="dropdown-item" data-filter="all">All time</div>
                                </div>
                            </div>
                        </div>
                        <div class="chart-actions">
                            <i class="fas fa-ellipsis-h"></i>
                        </div>
                    </div>
                    <canvas id="orderStatusChart"></canvas>
                </div>
            </div>

            <!-- Top Products Section -->
            <div class="top-products-section">
                <div class="chart-header">
                    <div class="chart-title">
                        <span>Top Selling Products</span>
                        <div class="dropdown" id="productsFilter">
                            <span data-filter="week">This week</span>
                            <i class="fas fa-chevron-down"></i>
                            <div class="dropdown-menu" style="display: none;">
                                <div class="dropdown-item" data-filter="week">This week</div>
                                <div class="dropdown-item" data-filter="month">This month</div>
                                <div class="dropdown-item" data-filter="all">All time</div>
                            </div>
                        </div>
                    </div>
                    <div class="chart-actions">
                        <i class="fas fa-ellipsis-h"></i>
                    </div>
                </div>
                <div class="table-container">
                    <table class="sales-report-table">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Product Name</th>
                                <th>Units Sold</th>
                                <th>Revenue</th>
                                <th>Growth</th>
                            </tr>
                        </thead>
                        <tbody id="topProductsTable">
                            <!-- Dynamic content will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="orders-container">
                <div class="chart-header">
                    <div class="chart-title">
                        <span>Recent Orders</span>
                        <div class="dropdown" id="ordersFilter">
                            <span data-filter="week">This week</span>
                            <i class="fas fa-chevron-down"></i>
                            <div class="dropdown-menu" style="display: none;">
                                <div class="dropdown-item" data-filter="week">This week</div>
                                <div class="dropdown-item" data-filter="month">This month</div>
                                <div class="dropdown-item" data-filter="all">All time</div>
                            </div>
                        </div>
                    </div>
                    <div class="chart-actions">
                        <i class="fas fa-ellipsis-h"></i>
                    </div>
                </div>
                <div class="orders-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Order Date</th>
                                <th>Item</th>
                                <th>Customer</th>
                                <th>Order Total</th>
                                <th>Order Status</th>
                            </tr>
                        </thead>
                        <tbody id="recentOrdersTable">
                            <!-- Dynamic content will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Payment Methods Section -->
            <div class="payment-methods-section">
                <h3>Payment Methods</h3>
                <div class="payment-stats">
                    <div class="payment-method-card">
                        <h4>Cash on Delivery</h4>
                        <div class="payment-progress">
                            <div class="progress-bar cod-progress" style="width: 0%"></div>
                        </div>
                        <span class="payment-percentage" id="codPercentage">0%</span>
                    </div>
                    <div class="payment-method-card">
                        <h4>Online Payment</h4>
                        <div class="payment-progress">
                            <div class="progress-bar online-progress" style="width: 0%"></div>
                        </div>
                        <span class="payment-percentage" id="onlinePercentage">0%</span>
                    </div>
                    <div class="payment-method-card">
                        <h4>Wallet</h4>
                        <div class="payment-progress">
                            <div class="progress-bar wallet-progress" style="width: 0%"></div>
                        </div>
                        <span class="payment-percentage" id="walletPercentage">0%</span>
                    </div>
                </div>
            </div>

            <!-- Customer Insights -->
            <div class="customer-insights-section">
                <h3>Customer Insights</h3>
                <div class="insights-grid">
                    <div class="insight-card">
                        <h4>New Customers</h4>
                        <span class="insight-value" id="newCustomers">0</span>
                    </div>
                    <div class="insight-card">
                        <h4>Returning Customers</h4>
                        <span class="insight-value" id="returningCustomers">0</span>
                    </div>
                    <div class="insight-card">
                        <h4>Customer Retention</h4>
                        <span class="insight-value" id="customerRetention">0%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/javascript/admins/dashboard.js"></script>
</body>
</html>