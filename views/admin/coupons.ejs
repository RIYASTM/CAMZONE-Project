<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupons | CAMZONE</title>
    <link rel="stylesheet" href="/stylesheet/partials/admins/sidebar.css">
    <link rel="stylesheet" href="/stylesheet/partials/admins/header.css">
    <link rel="stylesheet" href="/stylesheet/admin/coupons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container">
        <!-- Include Sidebar -->
        <%- include('../partials/admins/sidebar') %>
        
        <!-- Main Content -->
        <div class="main-content">
            <!-- Include Header -->
            <%- include('../partials/admins/header') %>
            
            <!-- Coupons Top Bar -->
            <div class="coupons-top-bar">
                <div class="top-left">
                    <span>All Coupons |</span>
                    <select class="sort-by" aria-label="Sort coupons">
                        <option value="all">Sort by</option>
                        <option value="name">Name</option>
                        <option value="discount">Discount</option>
                        <option value="validity">Validity</option>
                    </select>
                </div>
                <div class="top-center" style="position: relative; display: inline-block;">
                    <input type="text" class="search-bar" id="search" placeholder="Search" value="<%= search %>" aria-label="Search coupons">
                    <% if(search) { %>
                        <button class="clear" id="clear-button" aria-label="Clear search"><i class="bi bi-x fs-1"></i></button>
                    <% } %>
                </div>
                <div class="top-right">
                    <select class="filter" aria-label="Filter coupons">
                        <option value="all">Filter</option>
                        <option value="active">Active</option>
                        <option value="expired">Expired</option>
                    </select>
                    <button class="add-coupon" id="addCouponButton" aria-label="Add a new coupon">Add Coupon</button>
                </div>
            </div>
            
            <!-- Coupons Table -->
            <div class="coupons-table">
                <table>
                    <thead>
                        <tr>
                            <th>Coupon Name</th>
                            <th>Coupon Code</th>
                            <th>Discount Type</th>
                            <th>Discount</th>
                            <th>Min Order</th>
                            <th>Max Order</th>
                            <th>Valid From</th>
                            <th>Valid Upto</th>
                            <th>Limit</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(coupons && coupons.length > 0) { %>
                            <% coupons.forEach(coupon => { %>
                                <tr>
                                    <td><%= coupon.couponName %></td>
                                    <td><%= coupon.couponCode %></td>
                                    <td><%= coupon.discountType.charAt(0).toUpperCase() + coupon.discountType.slice(1) %></td>
                                    <td><%= coupon.discountType === 'percentage' ? coupon.discount + '%' : '₹ ' + coupon.discount %></td>
                                    <td>₹ <%= coupon.minOrder %></td>
                                    <td>₹ <%= coupon.maxOrder %></td>
                                    <td><%= new Date(coupon.validFrom).toLocaleDateString() %></td>
                                    <td><%= new Date(coupon.validUpto).toLocaleDateString() %></td>
                                    <td><%= coupon.couponLimit || '0' %></td>
                                    <td><%= new Date(coupon.validUpto) < new Date() ? 'Expired' : (coupon.isList ? 'Active' : 'Inactive') %></td>
                                    <td>
                                        <a href="#" class="action-icon editCouponButton" data-coupon-id="<%= coupon.id %>" aria-label="Edit coupon"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="action-icon deleteCoupon" data-coupon-id="<%= coupon.id %>" aria-label="Delete coupon"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="10" style="text-align: center;">No coupons found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            <%- include('../partials/admins/pagination', { currentPages, totalPages }) %>
        </div>
    </div>

    <!-- Add Coupon Modal -->
    <div class="modal coupon-modal" id="addCouponModal" role="dialog" aria-labelledby="addCouponModalTitle">
        <div class="modal-content">
            <button type="button" class="close-btn" id="cancelAddCouponButton" aria-label="Close modal">×</button>
            <div class="modal-header">
                <h2 id="addCouponModalTitle">Add New Coupon</h2>
            </div>
            <form id="addCouponForm">
                <div id="general-error" class="general-error"></div>
                <div class="form-group">
                    <label for="couponName">Coupon Name <span class="required">*</span></label>
                    <input type="text" id="couponName" name="couponName" class="couponName" placeholder="Coupon Name" aria-required="true">
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="couponDescription">Description <span class="required">*</span></label>
                    <textarea id="couponDescription" name="description" class="description" placeholder="Coupon description" aria-required="true"></textarea>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="discountType">Discount Type <span class="required">*</span></label>
                        <select name="discountType" id="discountType" class="discountType" aria-required="true">
                            <option disabled selected>Select Discount Type</option>
                            <option value="percentage">Percentage</option>
                            <option value="fixed">Fixed Amount</option>
                        </select>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="discount">Discount <span class="required">*</span></label>
                        <input type="number" id="discount" name="discount" class="discount" step="0.01" placeholder="Discount" aria-required="true">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="minOrder">Min Order <span class="required">*</span></label>
                        <input type="number" id="minOrder" name="minOrder" class="minOrder" step="0.01" placeholder="Minimum Order" aria-required="true">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="maxOrder">Max Order <span class="required">*</span></label>
                        <input type="number" id="maxOrder" name="maxOrder" class="maxOrder" step="0.01" placeholder="Maximum Order" value="700000" aria-required="true">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="validFrom">Valid From <span class="required">*</span></label>
                        <input type="date" id="validFrom" name="validFrom" class="validFrom" aria-required="true">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="validUpto">Valid Upto <span class="required">*</span></label>
                        <input type="date" id="validUpto" name="validUpto" class="validUpto" aria-required="true">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="couponLimit">Limit</label>
                        <input type="number" id="couponLimit" name="couponLimit" class="couponLimit" placeholder="Usage Limit">
                        <div class="invalid-feedback"></div>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn save-btn">Add Coupon</button>
                    <div class="checkbox-group">
                        <label>Deactivate Coupon: 
                            <input type="checkbox" id="deactivateCoupon" name="isDeactivated">
                        </label>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Edit Coupon Modal -->
    <div class="modal coupon-modal" id="editCouponModal" role="dialog" aria-labelledby="editCouponModalTitle">
        <div class="modal-content">
            <button type="button" class="close-btn" id="cancelEditCouponButton" aria-label="Close modal">×</button>
            <div class="modal-header">
                <h2 id="editCouponModalTitle">Edit Coupon</h2>
            </div>
            <form id="editCouponForm">
                <div id="general-error" class="general-error"></div>
                <input type="hidden" id="couponId" name="id">
                <input type="hidden" id="page" name="currentPages">
                <div class="form-group">
                    <label for="editCouponCode">Coupon Code</label>
                    <input type="text" id="editCouponCode" name="couponCode" class="couponCode" readonly>
                </div>
                <div class="form-group">
                    <label for="editCouponName">Coupon Name <span class="required">*</span></label>
                    <input type="text" id="editCouponName" name="couponName" class="couponName" placeholder="Coupon Name" aria-required="true">
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-group">
                    <label for="editCouponDescription">Description <span class="required">*</span></label>
                    <textarea id="editCouponDescription" name="description" class="description" placeholder="Coupon description" aria-required="true"></textarea>
                    <div class="invalid-feedback"></div>
                </div>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="editDiscountType">Discount Type <span class="required">*</span></label>
                        <select name="discountType" id="editDiscountType" class="discountType" aria-required="true">
                            <option disabled selected>Select Discount Type</option>
                            <option value="percentage">Percentage</option>
                            <option value="fixed">Fixed Amount</option>
                        </select>
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="editDiscount">Discount <span class="required">*</span></label>
                        <input type="number" id="editDiscount" name="discount" class="discount" step="0.01" placeholder="Discount" aria-required="true">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="editMinOrder">Min Order <span class="required">*</span></label>
                        <input type="number" id="editMinOrder" name="minOrder" class="minOrder" step="0.01" placeholder="Minimum Order" aria-required="true">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="editMazOrder">Max Order <span class="required">*</span></label>
                        <input type="number" id="editMaxOrder" name="maxOrder" class="maxOrder" step="0.01" placeholder="Maximum Order" aria-required="true">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="editValidFrom">Valid From <span class="required">*</span></label>
                        <input type="date" id="editValidFrom" name="validFrom" class="validFrom" aria-required="true">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="editValidUpto">Valid Upto <span class="required">*</span></label>
                        <input type="date" id="editValidUpto" name="validUpto" class="validUpto" aria-required="true">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                        <label for="editCouponLimit">Limit</label>
                        <input type="number" id="editCouponLimit" name="couponLimit" class="couponLimit" placeholder="Usage Limit">
                        <div class="invalid-feedback"></div>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn save-btn">Save Changes</button>
                    <div class="checkbox-group">
                        <label>Deactivate Coupon: 
                            <input type="checkbox" id="editDeactivateCoupon" name="isDeactivated">
                        </label>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Delete Coupon Modal -->
    <div class="modal coupon-modal" id="deleteCouponModal" role="dialog" aria-labelledby="deleteCouponModalTitle">
        <div class="modal-content">
            <h2 id="deleteCouponModalTitle">Confirm Delete</h2>
            <p id="deleteCouponMessage"></p>
            <div class="form-actions">
                <button type="button" class="btn delete-btn" id="confirmDeleteButton">Delete</button>
                <button type="button" class="btn cancel-btn" id="cancelDeleteButton">Cancel</button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/javascript/admins/coupon.js"></script>
</body>
</html>