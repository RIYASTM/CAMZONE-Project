<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders | CAMZONE</title>
    <link rel="stylesheet" href="/stylesheet/admin/orders.css">
    <link rel="stylesheet" href="/stylesheet/partials/admins/sidebar.css">
    <link rel="stylesheet" href="/stylesheet/partials/admins/header.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <!-- Include Sidebar -->
        <%- include('../partials/admins/sidebar') %>
        
        <!-- Main Content -->
        <div class="main-content">
            <!-- Include Header -->
            <%- include('../partials/admins/header') %>
            
            <!-- Orders Top Bar -->
            <div class="orders-top-bar">
                <div class="top-left">
                    <span>All Orders |</span>
                    <select class="sort-by">
                        <option value="default">Sort by</option>
                        <option value="date">Date</option>
                        <option value="total">Total</option>
                        <option value="status">Status</option>
                    </select>
                </div>
                <div class="top-center" style="position: relative; display: inline-block;">
                    <input type="text" id="search" class="search-bar" placeholder="Search" value="<%= search%>">
                    <%if(search){%>
                    <button class="clear" id="clear-button"><i class="bi bi-x fs-1"></i></button>
                    <%}%>
                </div>
                <div class="top-right">
                    <select class="filter">
                        <option value="all">Filter</option>
                        <option value="processing">Processing</option>
                        <option value="shipped">Shipped</option>
                        <option value="delivered">Delivered</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                     <button class="sales-report-btn">
                        <i class="fa-solid fa-chart-line"></i> Sales Report
                    </button>
                </div>
            </div>
            
            <!-- Orders Table -->
            <div class="orders-table">
                <table>
                    <thead>
                        <tr>
                            <th>Order No</th>
                            <th>Customer</th>
                            <th>Order Date</th>
                            <th>Order Total</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td><%= order.orderId %></td>
                                <td><%= order.address.name %></td>
                                <td><%= order.createdOn.toString().split(' ').splice(1,3).join(' ') %></td>
                                <td>₹<%= order.finalAmount %></td>
                                <td><%= order.paymentMethod %></td>
                                <td><%= order.status %></td>
                                <td>
                                    <button class="filter order-details-btn" data-order-id="<%= order._id %>">
                                        Order Details
                                    </button>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <%- include('../partials/admins/pagination', { currentPages, totalPages }) %>
        </div>
    </div>

    <!-- Order Details Modal -->
    <div class="modal-overlay" id="orderModal">
        <div class="modal-content">
            <div class="modal-header">
                Order Details
                <button class="close-btn" onclick="closeModal()">×</button>
            </div>
            <div class="modal-body">
                <div class="order-info-grid">
                    <div class="order-section">
                        <h3>Order Information</h3>
                        <div class="order-detail">
                            <label>Order ID:</label>
                            <span id="modal-order-id">-</span>
                        </div>
                        <div class="order-detail">
                            <label>Order Date:</label>
                            <span id="modal-order-date">-</span>
                        </div>
                        <div class="order-detail">
                            <label>Payment Method:</label>
                            <span id="modal-payment-method">-</span>
                        </div>
                        <div class="order-detail">
                            <label>Order Status:</label>
                            <select class="status-dropdown" id="modal-order-status">
                                <option value="Pending">Pending</option>
                                <option value="Confirmed">Confirmed</option>
                                <option value="Processing">Processing</option>
                                <option value="Shipped">Shipped</option>
                                <option value="Out of Delivery">Out of Delivery</option>
                                <option value="Delivered">Delivered</option>
                                <option value="Cancelled">Cancelled</option>
                                <option value="Returned">Returned</option>
                                <option value="Return Request">Return Request</option>
                            </select>
                        </div>
                        <div class="order-detail">
                            <label>Phone:</label>
                            <span id="modal-phone">-</span>
                        </div>
                    </div>
                    
                    <div class="order-section">
                        <h3>Delivery Address</h3>
                        <div class="order-detail">
                            <label>Name:</label>
                            <span id="modal-customer-name">-</span>
                        </div>
                        <div class="order-detail">
                            <label>Address:</label>
                            <span id="modal-address">-</span>
                        </div>
                        <div class="order-detail">
                            <label>City:</label>
                            <span id="modal-city">-</span>
                        </div>
                        <div class="order-detail">
                            <label>State:</label>
                            <span id="modal-state">-</span>
                        </div>
                        <div class="order-detail">
                            <label>Pincode:</label>
                            <span id="modal-pincode">-</span>
                        </div>
                    </div>
                </div>

                <div class="order-items-section">
                    <h3>Order Items</h3>
                    <table class="order-items-table">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody id="modal-order-items">
                        </tbody>
                    </table>
                </div>

                <div class="payment-summary">
                    <h3>Payment Summary</h3>
                    <div class="payment-row">
                        <label>Subtotal:</label>
                        <span id="modal-subtotal">₹0</span>
                    </div>
                    <div class="payment-row">
                        <label>Shipping:</label>
                        <span id="modal-shipping">₹0</span>
                    </div>
                    <div class="payment-row">
                        <label>Promotion/Discount:</label>
                        <span id="modal-discount">₹0</span>
                    </div>
                    <div class="payment-row total">
                        <label>Total:</label>
                        <span id="modal-total">₹0</span>
                    </div>
                </div>
            </div>
            <div id="return-reminder" class="return-reminder" >
            </div>
            <div class="modal-footer">
                <button class="modal-btn" onclick="closeModal()">Close</button>
                <button class="modal-btn primary" onclick="updateOrderStatus()">Update Status</button>
                <button class="modal-btn" onclick="printOrder()">Print</button>
            </div>
        </div>
    </div>

    <!-- Sales Report Modal -->
    <div class="modal-overlay" id="salesReportModal">
        <input type="hidden" id="orders" value="<%= JSON.stringify(orders)%>">
        <div class="modal-content sales-report-modal">
            <div class="modal-header">
                Sales Report
                <button class="close-btn close-btn-sales">×</button>
            </div>
            <div class="modal-body">
                <!-- Filter Section -->
                <div class="sales-filter-section">
                    <h3>Generate Report</h3>
                    <div class="filter-row">
                        <div class="filter-group">
                            <label for="reportType">Report Type:</label>
                            <select id="reportType" class="sales-filter-select">
                                <option value="daily" >Daily</option>
                                <option value="weekly">Weekly</option>
                                <option value="monthly">Monthly</option>
                                <option value="yearly">Yearly</option>
                                <option value="custom">Custom Range</option>
                            </select>
                        </div>
                        
                        <div class="filter-group" id="customDateRange">
                            <div class="date-inputs">
                                <div>
                                    <label for="startDate">From:</label>
                                    <input type="date" id="startDate" class="date-input">
                                </div>
                                <div>
                                    <label for="endDate">To:</label>
                                    <input type="date" id="endDate" class="date-input">
                                </div>
                            </div>
                        </div>
                        
                        <div class="filter-group">
                            <button class="generate-report-btn">
                                <i class="fa-solid fa-chart-line"></i> Generate Report
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sales Summary Cards -->
                <div class="sales-summary-grid" id="salesSummary">
                    <div class="summary-card">
                        <div class="card-header">
                            <i class="fa-solid fa-shopping-cart"></i>
                            <span>Total Orders</span>
                        </div>
                        <div class="card-value" id="totalOrders">0</div>
                    </div>
                    
                    <div class="summary-card">
                        <div class="card-header">
                            <i class="fa-solid fa-indian-rupee-sign"></i>
                            <span>Total Revenue</span>
                        </div>
                        <div class="card-value" id="totalRevenue">₹0</div>
                    </div>
                    
                    <div class="summary-card">
                        <div class="card-header">
                            <i class="fa-solid fa-percentage"></i>
                            <span>Average Order Value</span>
                        </div>
                        <div class="card-value" id="avgOrderValue">₹0</div>
                    </div>
                    
                    <div class="summary-card">
                        <div class="card-header">
                            <i class="fa-solid fa-ban"></i>
                            <span>Cancelled Orders</span>
                        </div>
                        <div class="card-value" id="cancelledOrders">0</div>
                    </div>
                    <div class="summary-card">
                        <div class="card-header">
                            <i class="fa-solid fa-ticket"></i>
                            <span>Total Coupons Used</span>
                        </div>
                        <div class="card-value" id="totalCouponsUsed">0</div>
                    </div>

                    <!-- ✅ New field: Total Coupon Discount -->
                    <div class="summary-card">
                        <div class="card-header">
                            <i class="fa-solid fa-tags"></i>
                            <span>Total Coupon Discount</span>
                        </div>
                        <div class="card-value" id="totalCouponDiscount">₹0</div>
                    </div>
                </div>

                <!-- Detailed Sales Table -->
                <div class="sales-table-section" id="salesTableSection">
                    <h3>Detailed Sales Report</h3>
                    <div class="sales-table-container">
                        <div class="sales-filter-row">
                            <select class="filter" id="statusFilter">
                                <option value="">All Status</option>
                                <option value="Pending">Pending</option>
                                <option value="Confirmed">Confirmed</option>
                                <option value="Returned">Returned</option>
                                <option value="Cancelled">Cancelled</option>
                                <option value="Delevered">Delevered</option>
                            </select>

                            <select class="filter" id="paymentFilter">
                                <option value="">All Payments</option>
                                <option value="COD">Cash on Delivery</option>
                                <option value="Razorpay">Razorpay</option>
                                <option value="Wallet">Wallet</option>
                            </select>

                            <select class="filter" id="couponFilter">
                                <option value="">All Orders</option>
                                <option value="no">Without Coupon</option>
                                <option value="yes">With Coupon</option>
                            </select>
                        </div>
                        <table class="sales-report-table">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Customer</th>
                                    <th>Products</th>
                                    <th>Payment Method</th>
                                    <th>Coupon</th>
                                    <th>Total Dis</th>
                                    <th>Status</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody id="salesTableBody">
                                <!-- Dynamic content will be inserted here -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Chart Section -->
                <div class="sales-chart-section" id="salesChartSection">
                    <h3>Sales Trend</h3>
                    <div class="chart-container">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>
            
            <div class="modal-footer">
                <button class="modal-btn close">Close</button>
                <button class="modal-btn" id="exportPdf">
                    <i class="fa-solid fa-file-pdf"></i> Export PDF
                </button>
                <button class="modal-btn primary" id="exportExcel">
                    <i class="fa-solid fa-file-excel"></i> Export Excel
                </button>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.28/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="/javascript/admins/order.js"></script>
    <script src="/javascript/admins/salesReport.js"></script>
</body>
</html>