
<link rel="stylesheet" href="/stylesheet/partials/admins/salesReport.css">nk

<input type="hidden" id="salesReportData" value='<%= JSON.stringify(orders).replace(/'/g, '&#39;') %>'>

<!-- Sales Report Modal -->
<div class="modal-overlay" id="salesReportModal">
    <div class="modal-content sales-report-modal">
        <div class="modal-header">
            <h2>Sales Report</h2>
            <button class="close-btn" onclick="closeSalesReportModal()">×</button>
        </div>
        <div class="modal-body">
            <!-- Report Filters -->
            <div class="report-filters">
                <div class="filter-group">
                    <label for="reportType">Report Type:</label>
                    <select id="reportType" class="filter-select">
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                        <option value="monthly">Monthly</option>
                        <option value="yearly">Yearly</option>
                        <option value="custom">Custom Range</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="startDate">Start Date:</label>
                    <input type="date" id="startDate" class="filter-input">
                </div>
                <div class="filter-group">
                    <label for="endDate">End Date:</label>
                    <input type="date" id="endDate" class="filter-input">
                </div>
                <div class="filter-group">
                    <button class="generate-report-btn" onclick="generateSalesReport()">
                        <i class="fas fa-chart-line"></i> Generate Report
                    </button>
                </div>
            </div>

            <!-- Sales Summary Cards -->
            <div class="sales-summary">
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                    <div class="card-content">
                        <h3>Total Orders</h3>
                        <span class="metric-value" id="totalOrders">0</span>
                    </div>
                </div>
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-rupee-sign"></i>
                    </div>
                    <div class="card-content">
                        <h3>Total Revenue</h3> 
                        <span class="metric-value" id="totalRevenue">₹0</span>
                    </div>
                </div>
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="card-content">
                        <h3>Average Order Value</h3>
                        <span class="metric-value" id="avgOrderValue">₹0</span>
                    </div>
                </div>
                <div class="summary-card">
                    <div class="card-icon">
                        <i class="fas fa-percentage"></i>
                    </div>
                    <div class="card-content">
                        <h3>Growth Rate</h3>
                        <span class="metric-value" id="growthRate">0%</span>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="charts-section">
                <div class="chart-container">
                    <h3>Sales Trend</h3>
                    <canvas id="salesTrendChart"></canvas>
                </div>
                <div class="chart-container">
                    <h3>Order Status Distribution</h3>
                    <canvas id="orderStatusChart"></canvas>
                </div>
            </div>

            <!-- Top Products Table -->
            <div class="top-products-section">
                <h3>Top Selling Products</h3>
                <div class="table-container">
                    <table class="sales-report-table">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Product Name</th>
                                <th>Units Sold</th>
                                <th>Revenue</th>
                                <th>Growth</th>
                            </tr>
                        </thead>
                        <tbody id="topProductsTable">
                            <!-- Dynamic content will be populated here -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Payment Methods Summary -->
            <div class="payment-methods-section">
                <h3>Payment Methods</h3>
                <div class="payment-stats">
                    <div class="payment-method-card">
                        <h4>Cash on Delivery</h4>
                        <div class="payment-progress">
                            <div class="progress-bar cod-progress" style="width: 0%"></div>
                        </div>
                        <span class="payment-percentage" id="codPercentage">0%</span>
                    </div>
                    <div class="payment-method-card">
                        <h4>Online Payment</h4>
                        <div class="payment-progress">
                            <div class="progress-bar online-progress" style="width: 0%"></div>
                        </div>
                        <span class="payment-percentage" id="onlinePercentage">0%</span>
                    </div>
                    <div class="payment-method-card">
                        <h4>Wallet</h4>
                        <div class="payment-progress">
                            <div class="progress-bar wallet-progress" style="width: 0%"></div>
                        </div>
                        <span class="payment-percentage" id="walletPercentage">0%</span>
                    </div>
                </div>
            </div>

            <!-- Customer Insights -->
            <div class="customer-insights-section">
                <h3>Customer Insights</h3>
                <div class="insights-grid">
                    <div class="insight-card">
                        <h4>New Customers</h4>
                        <span class="insight-value" id="newCustomers">0</span>
                    </div>
                    <div class="insight-card">
                        <h4>Returning Customers</h4>
                        <span class="insight-value" id="returningCustomers">0</span>
                    </div>
                    <div class="insight-card">
                        <h4>Customer Retention</h4>
                        <span class="insight-value" id="customerRetention">0%</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="modal-footer">
            <button class="modal-btn" onclick="closeSalesReportModal()">Close</button>
            <button class="modal-btn secondary" onclick="exportReport('pdf')">
                <i class="fas fa-file-pdf"></i> Export PDF
            </button>
            <button class="modal-btn secondary" onclick="exportReport('excel')">
                <i class="fas fa-file-excel"></i> Export Excel
            </button>
            <button class="modal-btn primary" onclick="printReport()">
                <i class="fas fa-print"></i> Print Report
            </button>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/javascript/partials/salesReport.js"></script>