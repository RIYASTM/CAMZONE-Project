<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart - CAMZONE</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheet/user/cart.css">
</head>
<body>
    <%- include('../partials/users/header',{search , cart}) %>

    <section class="cart-page">
        <nav class="breadcrumb">
            <a href="/">Home</a>
            <span class="separator">></span>
            <span class="current">Cart</span>
        </nav>

        <div class="cart-container">
            <!-- Cart Items Section -->
            <div class="cart-items">
                <div class="cart-header">
                    <span>Product</span>
                    <span>Quantity</span>
                    <span>Price</span>
                    <span>Discount</span>
                    <span>Subtotal</span>
                </div>

                <% if (cartItems && cartItems.length > 0) { %>
                    <% cartItems.forEach(item => { %>
                        <div class="cart-item">
                            <div class="cart-product">
                                <img src="/Uploads/products/<%= item.productId.productImage[0] %>" alt="<%= item.productId.productName %>">
                                <span><%= item.productId.productName.toString().split(' ').splice(0,4).join(' ') %></span>
                            </div>
                            <div class="cart-quantity">
                                <button class="quantity-btn minus" id="minusButton" data-id="<%= item.productId._id %>" <%= item.quantity <= 1 ? 'disabled' : '' %>>-</button>
                                <input type="text" class="quantity-input" data-product-id="<%= item.productId._id %>" data-item="<%= JSON.stringify(item) %>" value="<%= item.quantity >= item.productId.quantity ? item.productId.quantity : item.quantity %>" readonly>
                                <button class="quantity-btn plus" id="plusButton" data-id="<%= item.productId._id %>" data-stock="<%= item.productId.quantity %>" <%= item.quantity >= item.productId.quantity ? 'disabled' : '' %>>+</button>
                            </div>
                            <div class="cart-itemPrice">
                                ₹ <%= item.itemPrice.toLocaleString('en-IN') %>
                            </div>
                            <div class="cart-itemOffer">
                                <%= item.discount ? item.discount + '%' : '-' %>
                            </div>
                            <div class="cart-subtotal">
                                <span class="item-subtotal">₹ <%= item.totalPrice.toLocaleString('en-IN') %></span>
                                <div class="cart-items-actions">
                                    <button class="wishlist-btn" data-id="<%= item.productId._id %>">
                                        <i class="fa fa-heart"></i>
                                    </button>
                                    <button class="remove-item" data-id="<%= item.productId._id %>">
                                        <i class="fas fa-circle-xmark"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }) %> 
                <% } else { %>
                    <p>Your cart is empty.</p>
                <% } %>
            </div>

            <!-- Cart Total Section -->
            <div class="cart-total">
                <h2>Cart Total</h2>
                <div class="total-row subtotal">
                    <span>Subtotal</span>
                    <span id="subtotal">₹ <%= subtotal.toLocaleString('en-IN') %></span>
                </div>
                <div class="total-row discount-offer" style="border-bottom: none;">
                    <span>Saved </span>
                    <span class="saved-amount" id="offeredPrice">-₹ <%= totalOfferedPrice.toLocaleString('en-IN') %></span>
                </div>

                
                <div class="total-row grand-total">
                    <span>Total Amount</span>
                    <span id="finalAmount">₹ <%= total.toLocaleString('en-IN') %></span>
                </div>
            </div>
        </div>

        <!-- Cart Actions -->
        <div class="cart-actions">
            <a href="/shop" class="btn continue-shopping">Continue Shopping</a>
            <a href="/checkout" class="btn proceed-checkout">Proceed to Checkout</a>
        </div>
    </section>

    <%- include('../partials/users/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/javascript/users/cart.js"></script>

</body>
</html>