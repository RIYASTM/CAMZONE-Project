<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Wishlist - CamZone</title>
    <link rel="stylesheet" href="/stylesheet/user/wishList.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <%- include('../partials/users/header',{ search, cart }) %>
    
    <div class="container">
        <!-- Breadcrumb Navigation -->
        <div class="breadcrumb">
            <a href="/">Home</a>
            <span class="separator">›</span>
            <a href="/my-account">My Account</a>
            <span class="separator">›</span>
            <span class="current">My Wishlist</span>
        </div>

        <!-- Main Content -->
        <div class="content">
            <%- include('../partials/users/sideBar', {currentPage : 'wishList'}) %>
            
            <!-- Wishlist Content -->
            <div class="profile-form">
                <div class="form-header">
                    <h2>Wish List</h2>
                </div>
                
                <!-- Your Wish List Section -->
                <div class="wishlist-section">
                    <div class="section-header">
                        <h3>Your Wish List</h3>
                        <a href="#" class="see-all">See All</a>
                    </div>
                    
                    <div class="product-grid">
                        <% if (wishlistItems && wishlistItems.length > 0) { %>
                            <% wishlistItems.forEach(item => { %>
                                <div class="product-card">
                                    <a href="/product?id=<%=item.product._id%>">
                                    <div class="product-image">
                                        <% if (item.product && item.product.productImage && item.product.productImage.length > 0) { %>
                                            <img src="<%= item.product.productImage[0] %>" alt="<%= item.product.productName %>">
                                        <% } else { %>
                                            <span>No Image</span>
                                        <% } %>
                                        <button class="wishlist-btn active" data-product-id="<%= item.product._id %>"><i class="fa fa-heart"></i></button>
                                    </div>
                                    <div class="product-info">
                                        <h4><%= item.product.productName %></h4>
                                        <div class="product-price">
                                            <% if ( item.product.salePrice < item.product.regularPrice) { %>
                                                <span class="current">₹ <%= item.product.salePrice %></span>
                                                <span class="original">₹ <%= item.product.regularPrice %></span>
                                            <% } else { %>
                                                <span class="current">₹ <%= item.product.regularPrice %></span>
                                            <% } %>
                                        </div> 
                                        <div class="product-rating">
                                            <% const rating = item.product.rating || 0; %>
                                            <% for(let i = 0; i < 5; i++) { %>
                                                <span class="star <%= i < rating ? 'filled' : '' %>">★</span>
                                            <% } %>
                                        </div>
                                    </div>
                                    </a>
                                    <button class="add-to-cart" data-id="<%=item.product._id%>">Add to Cart</button>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="empty-wishlist">
                                <p>Your wishlist is empty</p>
                                <a href="/shop" class="btn-primary">Browse Products</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/users/footer') %>
    
    <script src="/javascript/users/wishlist.js"></script>
</body>
</html>