<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <title>CAMZONE</title>
    <link rel="stylesheet" href="/stylesheet/user/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>

<header>

    <%- include('../partials/users/header',{search, cart}) %>

</header>


    <input type="hidden" id="allProducts" value="<%= JSON.stringify(products)%>">
    <section class="hero">
        <div class="hero-content">
            <h1>Canon camera</h1>
            <h1>Your dreams on your hand</h1>
        </div>
        <div class="hero-image">
            <img src="<%= locals.heroImage || '/images/Products/Canon/Camera/EOS RS 5 MARK II/Canon RS 5.webp' %>" alt="Canon Camera">
            <div class="price-tag">Only ‚Çπ5,05,995</div>
        </div>
    </section>

    <section class="categories">
        <% category.forEach(category => { %>
        <div class="category-card"> 
            <a href="/shop?category=<%=category._id%>">
                <div class="category-info">
                    <div class="name-image-row">
                        <h3><%= category.name %></h3>
                        <% if (category.categoryImage) { %>
                        <img src="<%= category.categoryImage %>" alt="<%= category.name %>">
                        <% } %>
                    </div>
                </div>
            </a>
        </div>
        <% }) %>

    </section>

    <section class="popular-products">
        <h2>Popular Products</h2>
        <input type="hidden" value="<%= JSON.stringify(newProducts) %>" id="newProducts">
        <div class="product-grid"> 
            <% newProducts.forEach(product=>{ %>
                <div class="product-card" data-id="<%= product._id %>">
                    <div class="wishlist-btn <%= wishlistItems.includes(product._id.toString()) ? 'active' : '' %>" data-id="<%= product._id %>">
                        <i class="fa fa-heart"></i>
                    </div>
                    <a href="/product?id=<%=product._id%>">
                        <div class="product-card-img">
                            <% if (product.productImage && product.productImage.length > 0) { %>
                                <img src="<%= product.productImage[0] %>" alt="<%= product.productName %>">
                            <% } else { %>
                                <span>No Image</span> 
                            <% } %>
                        </div>
                        <h3><%= product.productName.slice(0,23) %></h3>
                        <div class="price">
                            <% if ( product.salePrice < product.regularPrice || product.totalOffer) { %>
                                <span class="current">‚Çπ <%= product.salePrice %></span>
                                <span class="original">‚Çπ <%= product.regularPrice %></span>
                            <% } else { %>
                                <span class="current">‚Çπ <%= product.regularPrice %></span>

                            <% } %>
                            <span class="offer"><%= product.totalOffer ? product.totalOffer + '%' : '' %></span>
                        </div>
                        <div class="rating">
                            <%= '‚òÖ'.repeat(product.rating ? product.rating : 1 ) %>
                        </div>
                    </a>
                <!-- <button class="add-to-cart">Add to Cart</button> -->
                </div>
            <% }) %>
        </div>
    </section>

    <section class="special-offer">
        <div class="offer-content">
            <div class="offer-text">
                <h2>Special Offer</h2>
                <p>Get up to 40% off on selected items</p>
                <button class="shop-offer">Shop Now</button>
            </div>
            <div class="countdown">
                <div class="time-unit">
                    <span class="number">02</span>
                    <span class="label">Days</span>
                </div>
                <div class="time-unit">
                    <span class="number">12</span>
                    <span class="label">Hours</span>
                </div>
                <div class="time-unit">
                    <span class="number">45</span>
                    <span class="label">Minutes</span>
                </div>
                <div class="time-unit">
                    <span class="number">30</span>
                    <span class="label">Seconds</span>
                </div>
            </div>
        </div>
    </section>

    <section class="featured-products">
        <div class="section-header">
            <h2>Featured Products</h2>
            <input type="hidden" id="featured" value="<%= JSON.stringify(products.slice(0, 3))%>">
            <div class="view-controls">
                <button class="view-all">View All</button>
                <div class="arrows">
                    <button class="arrow-left">‚Üê</button>
                    <button class="arrow-right">‚Üí</button>
                </div>
            </div>
        </div>

        <div class="featured-grid">
            <% products.slice(0, 3).forEach(product => { %>
                <div class="product-card featured" data-id="<%= product._id %>">
                    <div class="wishlist-btn <%= wishlistItems.includes(product._id.toString()) ? 'active' : '' %>" data-id="<%= product._id %>">
                        <i class="fa fa-heart"></i>
                    </div>
                    <a href="/product?id=<%= product._id %>">
                        <div class="product-card-featured-img-container">
                            <div class="product-badge"><%= product.badge ? product.badge : 'New' %></div>
                            <% if (product.productImage && product.productImage.length > 0) { %>
                                <img src="<%= product.productImage[0] %>" alt="<%= product.name %>">
                            <% } else { %>
                                <span>No Image</span>
                            <% } %>
                        </div>
                        <h3><%= product.productName.slice(0,23) %></h3>
                        <div class="price">
                            <% if ( product.salePrice < product.regularPrice || product.totalOffer) { %>
                                <span class="current">‚Çπ <%= product.salePrice %></span>
                                <span class="original">‚Çπ <%= product.regularPrice %></span>
                            <% } else { %>
                                <span class="current">‚Çπ <%= product.regularPrice %></span>

                            <% } %>
                            <span class="offer"><%= product.totalOffer ? product.totalOffer + '%' : '' %> </span>
                        </div>
                        <div class="rating">
                            <%= '‚òÖ'.repeat(product.rating ? product.rating : 1 ) %>
                        </div>
                    </a>
                    <button class="add-to-cart" data-id="<%=product._id%>">Add to Cart</button>
                </div>
            <% }) %>
        </div>
    </section>

    <section class="benefits">
        <div class="benefit-item">
            <div class="benefit-icon">üöö</div>
            <h3>Free Shipping</h3>
            <p>On all orders above ‚Çπ20,000</p>
        </div>
        <div class="benefit-item">
            <div class="benefit-icon">üí∞</div>
            <h3>Money Back</h3>
            <p>30 Days return policy</p>
        </div>
        <div class="benefit-item">
            <div class="benefit-icon">üîí</div>
            <h3>Secure Payment</h3>
            <p>100% secure checkout</p>
        </div>
        <div class="benefit-item">
            <div class="benefit-icon">üéÅ</div>
            <h3>Special Discounts</h3>
            <p>On bulk orders</p>
        </div>
    </section>
    <section class="new-arrivals">
        <h2>New Arrivals</h2>
        <input type="hidden" id="newArrivals" value="<%= JSON.stringify(products.slice(8, Math.min(16, products.length))) %>">
        <div class="arrivals-grid" id="arrivalsGrid">
            <% if (products.length > 8) { %>
                <% for (let i = 8; i < Math.min(16, products.length); i++) { %>
                <div class="product-card" data-id="<%= products[i]._id %>">
                    <div class="wishlist-btn <%= wishlistItems.includes(products[i]._id.toString()) ? 'active' : '' %>" data-id="<%= products[i]._id %>">
                        <i class="fa fa-heart"></i>
                    </div>
                    <a href="/product?id=<%=products[i]._id%>">
                    <div class="product-card-img-container">
                        <div class="product-badge ">New</div>
                        <% if (products[i].productImage && products[i].productImage.length > 0) { %>
                            <img src="<%= products[i].productImage[0] %>" alt="<%= products[i].name %>">
                        <% } else { %>
                            <span>No Image</span>
                        <% } %>
                    </div>
                    <h3><%= products[i].productName.slice(0,23) %></h3>
                    <div class="price">
                        <% if(products[i].salePrice < products[i].regularPrice || products[i].totalOffer){ %> 
                            <span class="current">‚Çπ <%= products[i].salePrice %></span>
                            <span class="original">‚Çπ <%= products[i].regularPrice %></span>
                        <% }else{ %>
                            <span class="current">‚Çπ <%= products[i].regularPrice %></span>
                        <% } %>
                        <span class="offer"><%= products[i].totalOffer ? products[i].totalOffer + '%' : '' %> </span>
                    </div>
                    <div class="rating">
                        <%= '‚òÖ'.repeat(products[i].rating ? products[i].rating : 1 ) %>
                    </div>
                    </a>
                    <button class="add-to-cart" data-id="<%=products[i]._id%>">Add to Cart</button>
                </div>
            <% } %>
        <% } else { %>
            <p>No new arrivals available right now.</p>
        <% } %>
        </div>
    </section>

    <section class="brand-showcase">
        <h2>Top Brands</h2>
        <div class="brand-logos">
            <% const brands = ['Canon', 'Nikon', 'Sony', 'Panasonic'] %>
            <% brands.forEach(brand => { %>
                <div class="brand-logo">
                    <img src="/images/icons/brands/<%= brand.toLowerCase() %>.png" alt="<%= brand %>" class="icon">
                </div>
            <% }) %>
        </div>
    </section>
    <footer>
        
        <%- include('../partials/users/footer') %>
    
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/javascript/users/home.js"></script>

</html>